<GridLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:background="@drawable/wgtile_background"
   android:elevation="@dimen/elevation_low"
   android:padding="2dp"
   tools:context="edu.neu.madcourse.duyvu.twoplayergame.TPWGGameActivity">

   <Button android:id="@+id/tpwgsmall1" style="@style/WGTileButton"
                android:layout_column="0" android:layout_row="0"/>
