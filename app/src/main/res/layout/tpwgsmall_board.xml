                android:layout_column="1" android:layout_row="0"/>
   <Button android:id="@+id/tpwgsmall3" style="@style/WGTileButton"
                android:layout_column="2" android:layout_row="0"/>
   <Button android:id="@+id/tpwgsmall4" style="@style/WGTileButton"
                android:layout_column="0" android:layout_row="1"/>
   <Button android:id="@+id/tpwgsmall5" style="@style/WGTileButton"
                android:layout_column="1" android:layout_row="1"/>
   <Button android:id="@+id/tpwgsmall6" style="@style/WGTileButton"
                android:layout_column="2" android:layout_row="1"/>
   <Button android:id="@+id/tpwgsmall7" style="@style/WGTileButton"
                android:layout_column="0" android:layout_row="2"/>
   <Button android:id="@+id/tpwgsmall8" style="@style/WGTileButton"
                android:layout_column="1" android:layout_row="2"/>
   <Button android:id="@+id/tpwgsmall9" style="@style/WGTileButton"
                android:layout_column="2" android:layout_row="2"/>
