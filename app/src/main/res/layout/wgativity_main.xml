<FrameLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:clipChildren="false"
   tools:context=".WGActivity">

   <edu.neu.madcourse.duyvu.wordgame.WGScrollingView
      android:id="@+id/wgmain_background"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:scrollingDrawable="@drawable/xando_background"/>

   <fragment
      android:id="@+id/wgmain_fragment"
      class="edu.neu.madcourse.duyvu.wordgame.WGMainFragment"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      tools:layout="@layout/wgfragment_main"/>
</FrameLayout>
