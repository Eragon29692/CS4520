<GridLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:background="@drawable/wgtile_background"
   android:elevation="@dimen/elevation_low"
   android:padding="3dp"
   tools:context="edu.neu.madcourse.duyvu.wordgame.WGGameActivity">

   <Button android:id="@+id/wgsmall1" style="@style/WGTileButton"
                android:layout_column="0" android:layout_row="0"/>
   <Button android:id="@+id/wgsmall2" style="@style/WGTileButton"
                android:layout_column="1" android:layout_row="0"/>
   <Button android:id="@+id/wgsmall3" style="@style/WGTileButton"
                android:layout_column="2" android:layout_row="0"/>
   <Button android:id="@+id/wgsmall4" style="@style/WGTileButton"
                android:layout_column="0" android:layout_row="1"/>
   <Button android:id="@+id/wgsmall5" style="@style/WGTileButton"
                android:layout_column="1" android:layout_row="1"/>
   <Button android:id="@+id/wgsmall6" style="@style/WGTileButton"
                android:layout_column="2" android:layout_row="1"/>
   <Button android:id="@+id/wgsmall7" style="@style/WGTileButton"
                android:layout_column="0" android:layout_row="2"/>
   <Button android:id="@+id/wgsmall8" style="@style/WGTileButton"
                android:layout_column="1" android:layout_row="2"/>
   <Button android:id="@+id/wgsmall9" style="@style/WGTileButton"
                android:layout_column="2" android:layout_row="2"/>
</GridLayout>
