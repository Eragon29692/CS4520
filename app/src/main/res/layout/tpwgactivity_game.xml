<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TPWGActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <fragment
                        android:id="@+id/tpwgfragment_game_controls"
                        class="edu.neu.madcourse.duyvu.twoplayergame.TPWGControlFragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="0.1"
                        tools:layout="@layout/tpwgfragment_control" />

                    <TextView
                        android:id="@+id/tpwgbutton_restart"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:background="@drawable/dwround_white_textbox"
                        android:elevation="@dimen/elevation_low"
                        android:fontFamily="casual"
                        android:text="Turn: "
                        android:textStyle="normal|bold"
                        android:layout_marginTop="5dp"
                        android:textSize="14sp"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tpwgactivity_current_word"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dwround_current_word"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tpwgactivity_game_score"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dwround_white_textbox"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Score: "
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/tpwgactivity_timer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/dwround_white_textbox"
                    android:fontFamily="casual"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Time:"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:gravity="center"
            android:orientation="vertical">

            <fragment
                android:id="@+id/tpwgfragment_game"
                class="edu.neu.madcourse.duyvu.twoplayergame.TPWGGameFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                tools:layout="@layout/tpwgfragment_game" />
        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/tpwgthinking" />

</FrameLayout>
