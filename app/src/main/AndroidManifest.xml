<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.duyvu">
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".hellomad.MainMenu"
            android:label="@string/main_menu_title"
            android:screenOrientation="portrait">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".hellomad.AboutMe"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="edu.neu.madcourse.duyvu.tictactoe.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.neu.madcourse.duyvu.tictactoe.GameActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>